<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/bg_login_screen_99">

    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/view_list_role"
        android:layout_width="fill_parent"
        android:layout_height="120dp"></LinearLayout>

    <LinearLayout
        android:layout_below="@id/view_list_role"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/layout_switch_account"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_switch_acc"
        android:gravity="center_horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="@string/switch_acc" />

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/bg_login_screen_99"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/select_role"
            android:src="@drawable/bt_select_roles"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </RelativeLayout>




</RelativeLayout>